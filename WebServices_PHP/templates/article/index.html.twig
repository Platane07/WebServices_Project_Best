{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}

<div class="container">
    <div class="row justify-content-center">
        <h1>Articles</h1>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Libelle</th>
                    <th>Texte</th>
                    <th>Visuel</th>
                    <th>Prix</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.libelle }}</td>
                    <td>{{ article.texte }}</td>
                    <td>{{ article.visuel }}</td>
                    <td>{{ article.prix }}</td>
                    <td>
                        <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-primary">show</a>
                        <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-primary">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('article_new') }}" class="btn btn-primary">Create new</a>
    </div>
</div>
{% endblock %}
