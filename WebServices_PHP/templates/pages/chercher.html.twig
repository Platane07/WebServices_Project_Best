{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!
{% endblock %}

{% block body %}

	<div class="card col-md-12">
		<div class="card-header text-center">
			{%  if articles|length > 0 %}
			<h1>{{ recherche }} : {{ articles|length }} Produit(s)</h1>
		</div>
		<div class="card-body row justify-content-center">
			{% for article in articles %}
				<div class="col-md-3">
					<div class="card">
						<img src="{{ asset(article.visuel) }}" class="card-img-top text-center" style="width:100%" alt="Logo Boutique Symfony">
						<div class="card-body">
							<h5 class="card-title">{{ article.libelle }}</h5>
							<p class="card-text">{{ article.texte }}</p>
							<a href="{{ path("panier_ajouter", { 'idArticle': article.id, 'quantite' : 1}) }}" class="btn btn-primary">ajouter ce article au panier</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
		{% else %}
			<h1>Aucun r√©sultat</h1>
		</div>
		{%  endif %}
	</div>
{% endblock %}
